<%# navigation styled for Bootstrap 3.0 %>

<div class="row">
  <p id="notice"><%= notice %></p>
  <h1>Listing Crypts</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Decrypt</th>
        <th>Shift</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @crypts.each do |crypt| %>
        <tr>
          <td><%= crypt.decrypt %></td>
          <td><%= crypt.shift %></td>
          <td><%= link_to 'Show', crypt %></td>
          <td><%= link_to 'Edit', edit_crypt_path(crypt) %></td>
          <td><%= link_to 'Destroy', crypt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
  <br>


  <%= link_to 'New Crypt', new_crypt_path %>
</div>
